<%if (contact) {%>
        <div class="form-group col-md-5">
            <input type="text" class="form-control" id="userName" value="<%=contact.name%>">
        </div>
        <div class="form-group col-md-3">
            <input type="text" class="form-control" id="phone" value="<%=contact.number%>">
        </div>
    <i class="glyphicon glyphicon-refresh" id="updateContact" data-id="<%=contact.id%>"></i>
<%} else {%>
        <div class="form-group col-md-5">
            <input type="text" class="form-control" id="userName" placeholder="Enter name">
        </div>
        <div class="form-group col-md-3">
            <input type="text" class="form-control" id="phone" placeholder="Enter phone">
        </div>
            <i class="glyphicon glyphicon-plus" id="submitContact"></i>

<%}%>
<span id="validationContact" class="validation-fields"></span>
